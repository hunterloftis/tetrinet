@import 'mixins'
@import 'animations'
@import 'library'

// block colors
red = #811
green = #181
blue = #118
purple = #818
orange = #f28d28
yellow = #f1f218
black = #333


#score
  position absolute
  top 0
  left 0
  width 200px
  font-size 16px
  padding 10px
  margin 20px
  text-align center
  background rgba(255,255,255,0.5)
  .current
    font-size 30px
  .high
    font-size 14px
    font-style italic


#board
  border 1px solid #999
  width 339px
  height 618px
  border-radius 3px
  margin 30px auto
  position relative
  box-shadow 0 0 25px -10px #000
  background rgba(255,255,255,0.5)

  #next_block
    position absolute
    top 0
    left 100%
    width 125px
    margin-left 20px
    div
      width 25px
      height 25px
      margin 1px
      inline-block()

  #game_over
    position absolute
    top 35%
    left 10%
    right 10%
    background rgba(0,0,0,0.1)
    color #eee
    font-size 30px
    text-align center
    border-radius 3px
    padding 20px 0

  .block
    -webkit-transform-style preserve-3d
    width 26px
    height 26px
    margin 1px
    float left
    border-radius 3px
    &.on
      border 1px solid #555
      background black
      //animation pop 100ms ease-out
      

  #next_block div, .block.on
    &.red
      background red
    &.green
      background green
    &.blue
      background blue
    &.purple
      background purple
    &.orange
      background orange
    &.yellow
      background yellow
    &.black
      background black
